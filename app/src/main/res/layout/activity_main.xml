<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:text="Roaming this cycle (per SIM)"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cycleDayLabel"
            android:text="Reset day: 1"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSetCycleDay"
            android:text="Set Reset Day"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- SIM 1 -->
        <LinearLayout
            android:id="@+id/sim1Panel"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sim1Title"
                android:text="SIM 1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/sim1Progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"/>
            <TextView
                android:id="@+id/sim1Used"
                android:text="Used: —"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- SIM 2 -->
        <LinearLayout
            android:id="@+id/sim2Panel"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sim2Title"
                android:text="SIM 2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/sim2Progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"/>
            <TextView
                android:id="@+id/sim2Used"
                android:text="Used: —"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Permissions + refresh -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnUsageAccess"
                android:text="Grant Usage Access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnPhonePerm"
                android:text="Grant Phone Permission"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnRefresh"
            android:text="Refresh"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
